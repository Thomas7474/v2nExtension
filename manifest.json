{
    "manifest_version": 3,
    "name": "YouTube Transcript Generator",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "downloads"],
    "host_permissions": ["https://www.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  